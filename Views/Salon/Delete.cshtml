@model FitnessCenterReservationSystem.Models.Salon

@{
    ViewData["Title"] = "Salon Sil";
}

<h4 class="mb-3 text-danger">
    <i class="bi bi-x-circle me-1"></i>
    Salon Sil
</h4>

<div class="card shadow-sm border-0">
    <div class="card-body p-3">

        <p class="small text-muted mb-3">
            Bu salonu silmek istediğinize emin misiniz?
        </p>

        <dl class="row mb-3 small">
            <dt class="col-sm-3 fw-semibold">Salon Adı</dt>
            <dd class="col-sm-9">@Model.Ad</dd>

            <dt class="col-sm-3 fw-semibold">Adres</dt>
            <dd class="col-sm-9">@Model.Adres</dd>

            <dt class="col-sm-3 fw-semibold">Telefon</dt>
            <dd class="col-sm-9">@Model.telefon</dd>

            <dt class="col-sm-3 fw-semibold">Açılış Saati</dt>
            <dd class="col-sm-9">@Model.AcilisSaati</dd>

            <dt class="col-sm-3 fw-semibold">Kapanış Saati</dt>
            <dd class="col-sm-9">@Model.KapanisSaati</dd>
        </dl>

        <form asp-action="Delete" class="d-flex gap-2">
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-danger btn-sm px-3">
                <i class="bi bi-trash me-1"></i> Sil
            </button>

            <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-3">
                <i class="bi bi-arrow-left me-1"></i> İptal
            </a>
        </form>

    </div> <!-- card-body kapanışı -->
</div> <!-- card kapanışı -->
