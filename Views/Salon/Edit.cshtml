@model FitnessCenterReservationSystem.Models.Salon

@{
    ViewData["Title"] = "Salon Düzenle";
}

<h4 class="mb-3">
    <i class="bi bi-pencil-square text-primary me-1"></i>
    Salon Düzenle
</h4>

<div class="card shadow-sm border-0">
    <div class="card-body p-3">

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-2">
                <label asp-for="Ad" class="form-label small fw-semibold"></label>
                <input asp-for="Ad" class="form-control form-control-sm" />
                <span asp-validation-for="Ad" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Adres" class="form-label small fw-semibold"></label>
                <input asp-for="Adres" class="form-control form-control-sm" />
                <span asp-validation-for="Adres" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="telefon" class="form-label small fw-semibold"></label>
                <input asp-for="telefon" class="form-control form-control-sm" />
                <span asp-validation-for="telefon" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="AcilisSaati" class="form-label small fw-semibold"></label>
                <input asp-for="AcilisSaati" type="time" class="form-control form-control-sm" />
                <span asp-validation-for="AcilisSaati" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="KapanisSaati" class="form-label small fw-semibold"></label>
                <input asp-for="KapanisSaati" type="time" class="form-control form-control-sm" />
                <span asp-validation-for="KapanisSaati" class="text-danger small"></span>
            </div>

            <div class="d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-primary btn-sm px-3">
                    <i class="bi bi-check2 me-1"></i> Güncelle
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-3">
                    <i class="bi bi-arrow-left me-1"></i> Geri
                </a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
