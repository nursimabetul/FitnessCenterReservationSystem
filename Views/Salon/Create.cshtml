@model FitnessCenterReservationSystem.Models.Salon

@{
    ViewData["Title"] = "Salon Ekle";
}

<h4 class="mb-3">
    <i class="bi bi-patch-plus text-primary me-1"></i>
    @ViewData["Title"]
</h4>

<div class="card shadow-sm border-0 mx-auto" ;">
    <div class="card-body p-2">

        <form asp-action="Create" method="post">

            <div class="mb-2">
                <label asp-for="Ad" class="form-label small fw-semibold"></label>
                <input asp-for="Ad" class="form-control form-control-sm py-1" />
                <span asp-validation-for="Ad" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Adres" class="form-label small fw-semibold"></label>
                <input asp-for="Adres" class="form-control form-control-sm py-1" />
                <span asp-validation-for="Adres" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="telefon" class="form-label small fw-semibold"></label>
                <input asp-for="telefon" class="form-control form-control-sm py-1" />
                <span asp-validation-for="telefon" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="AcilisSaati" class="form-label small fw-semibold"></label>
                <input asp-for="AcilisSaati" type="time" class="form-control form-control-sm py-1" />
                <span asp-validation-for="AcilisSaati" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="KapanisSaati" class="form-label small fw-semibold"></label>
                <input asp-for="KapanisSaati" type="time" class="form-control form-control-sm py-1" />
                <span asp-validation-for="KapanisSaati" class="text-danger small"></span>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-sm px-2 py-1">
                    <i class="bi bi-check2 me-1"></i> Kaydet
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-2 py-1">
                    <i class="bi bi-arrow-left me-1"></i> Geri
                </a>
            </div>

        </form>

    </div> <!-- card-body kapanışı -->
</div> <!-- card kapanışı -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
