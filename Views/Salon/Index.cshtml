@model IEnumerable<FitnessCenterReservationSystem.Models.Salon>

@{
    ViewData["Title"] = "Salonlar";
}

<h4 class="mb-3">
    <i class="bi bi-patch-check text-primary me-1"></i>
    @ViewData["Title"]
</h4>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary btn-sm px-3">
        <i class="bi bi-plus-circle me-1"></i> Yeni Salon
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-2">

        <table class="table table-hover table-sm align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Ad</th>
                    <th>Adres</th>
                    <th>Telefon</th>
                    <th>Açılış</th>
                    <th>Kapanış</th>
                    <th class="text-end" style="width: 200px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Ad</td>
                        <td>@item.Adres</td>
                        <td>@item.telefon</td>
                        <td>@item.AcilisSaati</td>
                        <td>@item.KapanisSaati</td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm px-2 py-1 me-1">
                                <i class="bi bi-info-circle"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm px-2 py-1 me-1">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm px-2 py-1">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div> <!-- card-body kapanışı -->
</div> <!-- card kapanışı -->
