@model FitnessCenterReservationSystem.Models.Haber

@{
    ViewData["Title"] = "Haber Düzenle";
}

<h4 class="mb-3">
    <i class="bi bi-pencil-square text-primary me-1"></i>
    Haber Düzenle
</h4>

<div class="card shadow-sm border-0">
    <div class="card-body p-3">

        <!-- enctype önemli: dosya yükleme için gerekli -->
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-2">
                <label asp-for="Baslik" class="form-label small fw-semibold"></label>
                <input asp-for="Baslik" class="form-control form-control-sm" />
                <span asp-validation-for="Baslik" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Icerik" class="form-label small fw-semibold"></label>
                <textarea asp-for="Icerik" class="form-control form-control-sm"></textarea>
                <span asp-validation-for="Icerik" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Tarih" class="form-label small fw-semibold"></label>
                <input asp-for="Tarih" type="datetime-local" class="form-control form-control-sm" />
                <span asp-validation-for="Tarih" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="SalonId" class="form-label small fw-semibold"></label>
                <select asp-for="SalonId" class="form-select form-select-sm" asp-items="ViewBag.SalonId"></select>
                <span asp-validation-for="SalonId" class="text-danger small"></span>
            </div>

            <!-- OlusturanId gizli -->
            <input asp-for="OlusturanId" type="hidden" value="@Model.OlusturanId" />

            <!-- Mevcut resmi göster -->
            @if (!string.IsNullOrEmpty(Model.ResimYolu))
            {
                <div class="mb-2">
                    <label class="form-label small fw-semibold">Mevcut Resim</label>
                    <div>
                        <img src="@Model.ResimYolu" class="img-fluid rounded mb-2" alt="Haber Resmi" style="max-height:150px;" />
                    </div>
                </div>
            }

            <!-- Yeni resim yükleme -->
            <div class="mb-2">
                <label asp-for="ResimDosyasi" class="form-label small fw-semibold"></label>
                <input asp-for="ResimDosyasi" type="file" class="form-control form-control-sm" />
                <span asp-validation-for="ResimDosyasi" class="text-danger small"></span>
            </div>

            <div class="d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-primary btn-sm px-3">
                    <i class="bi bi-check2 me-1"></i> Kaydet
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-3">
                    <i class="bi bi-arrow-left me-1"></i> Geri
                </a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
