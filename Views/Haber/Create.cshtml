@model FitnessCenterReservationSystem.Models.Haber

@{
    ViewData["Title"] = "Haber Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="mb-3">
    <i class="bi bi-patch-plus text-primary me-1"></i>
    @ViewData["Title"]
</h4>

<div class="card shadow-sm border-0 mx-auto">
    <div class="card-body p-2">

        <!-- enctype önemli: dosya yükleme için gerekli -->
        <form asp-action="Create" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="mb-2">
                <label asp-for="Baslik" class="form-label small fw-semibold"></label>
                <input asp-for="Baslik" class="form-control form-control-sm py-1" />
                <span asp-validation-for="Baslik" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Icerik" class="form-label small fw-semibold"></label>
                <textarea asp-for="Icerik" class="form-control form-control-sm py-1"></textarea>
                <span asp-validation-for="Icerik" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Tarih" class="form-label small fw-semibold"></label>
                <input asp-for="Tarih" class="form-control form-control-sm py-1" type="datetime-local" />
                <span asp-validation-for="Tarih" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="SalonId" class="form-label small fw-semibold"></label>
                <select asp-for="SalonId" class="form-control form-control-sm" asp-items="ViewBag.SalonId"></select>
            </div>

            <!-- OlusturanId gizli -->
            <input asp-for="OlusturanId" type="hidden" value="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value" />

            <!-- Resim ekleme -->
            <div class="mb-2">
                <label asp-for="ResimDosyasi" class="form-label small fw-semibold"></label>
                <input asp-for="ResimDosyasi" type="file" class="form-control form-control-sm" />
                <span asp-validation-for="ResimDosyasi" class="text-danger small"></span>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-sm px-2 py-1">
                    <i class="bi bi-check2 me-1"></i> Kaydet
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-2 py-1">
                    <i class="bi bi-arrow-left me-1"></i> Geri
                </a>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
