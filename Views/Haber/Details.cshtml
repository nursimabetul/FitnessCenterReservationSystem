@model FitnessCenterReservationSystem.Models.Haber

@{
    ViewData["Title"] = "Haber Detayı";
}

<h4 class="mb-3">
    <i class="bi bi-info-circle text-primary me-1"></i>
    Haber Detayı
</h4>

<div class="card shadow-sm border-0">
    <div class="card-body p-3">

        <dl class="row small mb-3">
            <dt class="col-sm-3 fw-semibold">Başlık</dt>
            <dd class="col-sm-9">@Model.Baslik</dd>

            <dt class="col-sm-3 fw-semibold">İçerik</dt>
            <dd class="col-sm-9">@Model.Icerik</dd>

            <dt class="col-sm-3 fw-semibold">Tarih</dt>
            <dd class="col-sm-9">@Model.Tarih</dd>

            <dt class="col-sm-3 fw-semibold">Salon</dt>
            <dd class="col-sm-9">@Model.Salon.Ad</dd>

            <dt class="col-sm-3 fw-semibold">Oluşturan</dt>
            <dd class="col-sm-9">@Model.Olusturan.Ad @Model.Olusturan.Soyad</dd>
        </dl>

        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id"
               class="btn btn-primary btn-sm px-3">
                <i class="bi bi-pencil me-1"></i> Düzenle
            </a>

            <a asp-action="Index"
               class="btn btn-outline-secondary btn-sm px-3">
                <i class="bi bi-arrow-left me-1"></i> Geri
            </a>
        </div>

    </div>
</div>
