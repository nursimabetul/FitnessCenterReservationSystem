@model IEnumerable<FitnessCenterReservationSystem.Models.Haber>

@{
    ViewData["Title"] = "Haberler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="mb-3">
    <i class="bi bi-patch-check text-primary me-1"></i>
    @ViewData["Title"]
</h4>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary btn-sm px-3">
        <i class="bi bi-plus-circle me-1"></i> Yeni Ekle
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-2">

        <table class="table table-hover table-sm align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Başlık</th>
                    <th>İçerik</th>
                    <th>Tarih</th>
                    <th>Salon</th>
                    <th>Oluşturan</th>
                    <th>Resim</th>
                    <th class="text-end" style="width: 150px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Baslik</td>
                        <td>@item.Icerik</td>
                        <td>@item.Tarih.ToString("g")</td>
                        <td>@item.Salon?.Ad</td>
                        <td>@item.Olusturan?.Ad @item.Olusturan?.Soyad</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ResimYolu))
                            {
                                <img src="@item.ResimYolu" alt="Haber Resmi" class="img-thumbnail" style="max-height:50px;" />
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm px-2 py-1 me-1">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm px-2 py-1 me-1">
                                <i class="bi bi-info-circle"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm px-2 py-1">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
