@model FitnessCenterReservationSystem.Models.AntrenorCalismaSaati

@{
    ViewData["Title"] = "Çalışma Saatini Düzenle";
}

<h4 class="mb-3">
    <i class="bi bi-pencil-square text-primary me-1"></i>
    @ViewData["Title"]
</h4>

<div class="card shadow-sm border-0">
    <div class="card-body p-3">

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-2">
                <label asp-for="AntrenorId" class="form-label small fw-semibold">Antrenör</label>
                <select asp-for="AntrenorId" class="form-select form-select-sm" asp-items="@(ViewData["AntrenorId"] as SelectList)">
                    <option value="">-- Antrenör Seçin --</option>
                </select>
                <span asp-validation-for="AntrenorId" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Gun" class="form-label small fw-semibold">Gün</label>
                <select asp-for="Gun" class="form-select form-select-sm">
                    @foreach (DayOfWeek gun in Enum.GetValues(typeof(DayOfWeek)))
                    {
                        <option value="@gun" selected="@(Model.Gun == gun)">@gun</option>
                    }
                </select>
                <span asp-validation-for="Gun" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="BaslangicSaati" class="form-label small fw-semibold">Başlangıç Saati</label>
                <input asp-for="BaslangicSaati" type="time" class="form-control form-control-sm" />
                <span asp-validation-for="BaslangicSaati" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="BitisSaati" class="form-label small fw-semibold">Bitiş Saati</label>
                <input asp-for="BitisSaati" type="time" class="form-control form-control-sm" />
                <span asp-validation-for="BitisSaati" class="text-danger small"></span>
            </div>

            <div class="d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-primary btn-sm px-3">
                    <i class="bi bi-check2 me-1"></i> Kaydet
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-3">
                    <i class="bi bi-arrow-left me-1"></i> Geri
                </a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
