@model IEnumerable<FitnessCenterReservationSystem.Models.AntrenorCalismaSaati>

@{
    ViewData["Title"] = "Çalışma Saatleri";
}

<h4 class="mb-3">
    <i class="bi bi-patch-check text-primary me-1"></i>
    @ViewData["Title"]
</h4>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary btn-sm px-3">
        <i class="bi bi-plus-circle me-1"></i> Yeni Çalışma Saati Ekle
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="card shadow-sm border-0">
    <div class="card-body p-2">

        <table class="table table-hover table-sm align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Antrenör</th>
                    <th>Gün</th>
                    <th>Başlangıç Saati</th>
                    <th>Bitiş Saati</th>
                    <th class="text-end" style="width: 150px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Antrenor.Ad @item.Antrenor.Soyad</td>
                        <td>@item.Gun</td>
                        <td>@item.BaslangicSaati</td>
                        <td>@item.BitisSaati</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm px-2 py-1 me-1">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm px-2 py-1">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div> <!-- card-body kapanışı -->
</div> <!-- card kapanışı -->
