@model FitnessCenterReservationSystem.Models.Kampanya

@{
    ViewData["Title"] = "Kampanya Sil";
}

<h4 class="mb-3 text-danger">
    <i class="bi bi-x-circle me-1"></i>
    Kampanya Sil
</h4>

<div class="card shadow-sm border-0">
    <div class="card-body p-3">

        <p class="small text-muted mb-3">
            Bu kampanyayı silmek istediğinize emin misiniz?
        </p>

        <dl class="row mb-3 small">
            <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Baslik)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Baslik)</dd>

            <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Aciklama)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Aciklama)</dd>

            <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.BaslangicTarihi)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.BaslangicTarihi)</dd>

            <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.BitisTarihi)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.BitisTarihi)</dd>

            <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Hizmet)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Hizmet.Ad)</dd>
        </dl>

        <form asp-action="Delete" class="d-flex gap-2">
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-danger btn-sm px-3">
                <i class="bi bi-trash me-1"></i> Sil
            </button>

            <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-3">
                <i class="bi bi-arrow-left me-1"></i> İptal
            </a>
        </form>

    </div> <!-- card-body kapanışı -->
</div> <!-- card kapanışı -->
