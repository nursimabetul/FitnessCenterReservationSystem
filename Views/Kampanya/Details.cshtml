@model FitnessCenterReservationSystem.Models.Kampanya

@{
    ViewData["Title"] = "Kampanya Detayı";
}

<h4 class="mb-3">
    <i class="bi bi-info-circle text-primary me-1"></i>
    Kampanya Detayı
</h4>

<div class="card shadow-sm border-0">
    <div class="card-body p-3">

        <dl class="row small mb-3">
            <dt class="col-sm-3 fw-semibold">Başlık</dt>
            <dd class="col-sm-9">@Model.Baslik</dd>

            <dt class="col-sm-3 fw-semibold">Açıklama</dt>
            <dd class="col-sm-9">@Model.Aciklama</dd>

            <dt class="col-sm-3 fw-semibold">Başlangıç Tarihi</dt>
            <dd class="col-sm-9">@Model.BaslangicTarihi</dd>

            <dt class="col-sm-3 fw-semibold">Bitiş Tarihi</dt>
            <dd class="col-sm-9">@Model.BitisTarihi</dd>

            <dt class="col-sm-3 fw-semibold">Hizmet</dt>
            <dd class="col-sm-9">@Model.Hizmet.Ad</dd>
        </dl>

        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id"
               class="btn btn-primary btn-sm px-3">
                <i class="bi bi-pencil me-1"></i> Düzenle
            </a>

            <a asp-action="Index"
               class="btn btn-outline-secondary btn-sm px-3">
                <i class="bi bi-arrow-left me-1"></i> Geri
            </a>
        </div>

    </div>
</div>
