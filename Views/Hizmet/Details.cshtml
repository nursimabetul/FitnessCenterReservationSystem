@model FitnessCenterReservationSystem.Models.Hizmet

@{
    ViewData["Title"] = "Hizmet Detayı";
}

<h4 class="mb-3">
    <i class="bi bi-info-circle text-primary me-1"></i>
    Hizmet Detayı
</h4>

<div class="card shadow-sm border-0">
    <div class="card-body p-3">

        <dl class="row small mb-3">
            <dt class="col-sm-3 fw-semibold">Hizmet Adı</dt>
            <dd class="col-sm-9">@Model.Ad</dd>

            <dt class="col-sm-3 fw-semibold">Süre</dt>
            <dd class="col-sm-9">@Model.SureDakika dk</dd>

            <dt class="col-sm-3 fw-semibold">Ücret</dt>
            <dd class="col-sm-9">@Model.Ucret.ToString("C")</dd>

            <dt class="col-sm-3 fw-semibold">Salon</dt>
            <dd class="col-sm-9">@Model.Salon?.Ad</dd>
        </dl>

        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id"
               class="btn btn-primary btn-sm px-3">
                <i class="bi bi-pencil me-1"></i> Düzenle
            </a>

            <a asp-action="Index"
               class="btn btn-outline-secondary btn-sm px-3">
                <i class="bi bi-arrow-left me-1"></i> Geri
            </a>
        </div>

    </div>
</div>
