@model FitnessCenterReservationSystem.Models.Hizmet

@{
    ViewData["Title"] = "Hizmet Detay";
}

<h2>Hizmet Detay</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Ad</h5>
        <p class="card-text"><strong>Süre:</strong> @Model.SureDakika dk</p>
        <p class="card-text"><strong>Ücret:</strong> @Model.Ucret.ToString("C")</p>
        <p class="card-text"><strong>Salon:</strong> @Model.Salon?.Ad</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Geri</a>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mt-3">Düzenle</a>
