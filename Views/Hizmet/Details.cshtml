@model FitnessCenterReservationSystem.Models.Hizmet

@{
    ViewData["Title"] = "Hizmet Detay";
}

<h2>Hizmet Detay</h2>

<table class="table table-bordered">
    <tr>
        <th>Ad</th>
        <td>@Model.Ad</td>
    </tr>
    <tr>
        <th>Süre</th>
        <td>@Model.SureDakika dakika</td>
    </tr>
    <tr>
        <th>Ücret</th>
        <td>@Model.Ucret ₺</td>
    </tr>
