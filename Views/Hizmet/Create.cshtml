@model FitnessCenterReservationSystem.Models.Hizmet

@{
    ViewData["Title"] = "Yeni Hizmet";
}

<h4 class="mb-3">
    <i class="bi bi-patch-plus text-primary me-1"></i>
    @ViewData["Title"]
</h4>

<div class="card shadow-sm border-0 mx-auto" ;">
    <div class="card-body p-2">

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-2">
                <label asp-for="Ad" class="form-label small fw-semibold"></label>
                <input asp-for="Ad" class="form-control form-control-sm py-1" />
                <span asp-validation-for="Ad" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="SureDakika" class="form-label small fw-semibold"></label>
                <input asp-for="SureDakika" class="form-control form-control-sm py-1" />
                <span asp-validation-for="SureDakika" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Ucret" class="form-label small fw-semibold"></label>
                <input asp-for="Ucret" class="form-control form-control-sm py-1" />
                <span asp-validation-for="Ucret" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="SalonId" class="form-label small fw-semibold"></label>
                <select asp-for="SalonId" class="form-control form-control-sm" asp-items="ViewBag.Salonlar">
                    <option value="">-- Salon Seçin --</option>
                </select>
                <span asp-validation-for="SalonId" class="text-danger small"></span>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-sm px-2 py-1">
                    <i class="bi bi-check2 me-1"></i> Kaydet
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-2 py-1">
                    <i class="bi bi-arrow-left me-1"></i> Geri
                </a>
            </div>

        </form>

    </div> <!-- card-body kapanışı -->
</div> <!-- card kapanışı -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
