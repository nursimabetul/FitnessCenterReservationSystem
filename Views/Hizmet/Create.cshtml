@model FitnessCenterReservationSystem.Models.Hizmet

@{
    ViewData["Title"] = "Yeni Hizmet";
}

<h2>Yeni Hizmet</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Ad" class="form-label"></label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SureDakika" class="form-label"></label>
        <input asp-for="SureDakika" class="form-control" />
        <span asp-validation-for="SureDakika" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Ucret" class="form-label"></label>
        <input asp-for="Ucret" class="form-control" />
        <span asp-validation-for="Ucret" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SalonId" class="form-label"></label>
        <select asp-for="SalonId" asp-items="ViewBag.Salonlar" class="form-select">
            <option value="">-- Salon Seçin --</option>
        </select>
        <span asp-validation-for="SalonId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
