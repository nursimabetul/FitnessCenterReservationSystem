@model IEnumerable<FitnessCenterReservationSystem.Models.Hizmet>

@{
    ViewData["Title"] = "Hizmetler";
}

<h2>Hizmetler</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Yeni Hizmet Ekle</a>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Hizmet Adı</th>
            <th>Süre (dk)</th>
            <th>Ücret</th>
            <th>Salon</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ad</td>
                <td>@item.SureDakika</td>
                <td>@item.Ucret.ToString("C")</td>
                <td>@item.Salon?.Ad</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
