@model IEnumerable<FitnessCenterReservationSystem.Models.Hizmet>

<h2>Hizmetler</h2>

<a asp-action="Create" class="btn btn-primary mb-3">➕ Yeni Hizmet</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Salon</th>
            <th>Ücret</th>
            <th>Süre (dk)</th>
            <th style="width:180px">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ad</td>
                <td>@item.Salon?.Ad</td>
                <td>@item.Ucret ₺</td>
                <td>@item.SureDakika</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
