@model FitnessCenterReservationSystem.Models.Hizmet

<h2>Hizmet Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Ad"></label>
        <input asp-for="Ad" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="SalonId">Salon</label>
        <select asp-for="SalonId" asp-items="ViewBag.Salonlar" class="form-select"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Ucret"></label>
        <input asp-for="Ucret" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="SureDakika">Süre (dk)</label>
        <input asp-for="SureDakika" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
