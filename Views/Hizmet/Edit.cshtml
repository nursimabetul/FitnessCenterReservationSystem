@model FitnessCenterReservationSystem.Models.Hizmet

@{
    ViewData["Title"] = "Hizmet Düzenle";
}

<h4 class="mb-3">
    <i class="bi bi-pencil-square text-primary me-1"></i>
    Hizmet Düzenle
</h4>

<div class="card shadow-sm border-0">
    <div class="card-body p-3">

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-2">
                <label asp-for="Ad" class="form-label small fw-semibold"></label>
                <input asp-for="Ad" class="form-control form-control-sm" />
                <span asp-validation-for="Ad" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="SureDakika" class="form-label small fw-semibold"></label>
                <input asp-for="SureDakika" class="form-control form-control-sm" />
                <span asp-validation-for="SureDakika" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Ucret" class="form-label small fw-semibold"></label>
                <input asp-for="Ucret" class="form-control form-control-sm" />
                <span asp-validation-for="Ucret" class="text-danger small"></span>
            </div>

            <div class="mb-2">
                <label asp-for="SalonId" class="form-label small fw-semibold"></label>
                <select asp-for="SalonId" asp-items="ViewBag.Salonlar" class="form-select form-select-sm">
                    <option value="">-- Salon Seçin --</option>
                </select>
                <span asp-validation-for="SalonId" class="text-danger small"></span>
            </div>

            <div class="d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-primary btn-sm px-3">
                    <i class="bi bi-check2 me-1"></i> Kaydet
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-3">
                    <i class="bi bi-arrow-left me-1"></i> Geri
                </a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
