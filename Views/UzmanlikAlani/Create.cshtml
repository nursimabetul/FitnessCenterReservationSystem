@model FitnessCenterReservationSystem.Models.UzmanlikAlani

@{
    ViewData["Title"] = "Uzmanlık Alanı Ekle";
}
<h4 class="mb-3">
	<i class="bi bi-patch-plus text-primary me-1"></i>
	Uzmanlık Alanı Ekle
</h4>
<div class="card shadow-sm border-0 mx-auto" ;">
	<div class="card-body p-2">


        <form asp-action="Create">

            <div class="mb-2">
                <label asp-for="Ad" class="form-label small fw-semibold"></label>
                <input asp-for="Ad" class="form-control form-control-sm" placeholder="Örn: Yoga">
                <span asp-validation-for="Ad" class="text-danger small"></span>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-sm px-3">
                    <i class="bi bi-check2 me-1"></i> Kaydet
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-3">
                    <i class="bi bi-arrow-left me-1"></i> Geri
                </a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
