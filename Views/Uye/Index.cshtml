@{
    ViewData["Title"] = "Üye Dashboard";
}

<h2 class="mb-4">
    <i class="bi bi-house-door me-2"></i>
    Hoşgeldiniz, @User.Identity.Name
</h2>

<div class="row g-4">

    <!-- Aktif Randevular Kartı -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0 text-white bg-primary">
            <div class="card-body d-flex align-items-center">
                <i class="bi bi-calendar-check fs-1 me-3"></i>
                <div>
                    <h5 class="card-title mb-1">Aktif Randevular</h5>
                    <p class="card-text fs-4 mb-0">@ViewBag.ActiveAppointments</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Katıldığı Hizmetler Kartı -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0 text-white bg-success">
            <div class="card-body d-flex align-items-center">
                <i class="bi bi-clipboard-check fs-1 me-3"></i>
                <div>
                    <h5 class="card-title mb-1">Katıldığınız Hizmetler</h5>
                    <p class="card-text fs-4 mb-0">@ViewBag.ServicesCount</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Mevcut Kampanyalar Kartı -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0 text-white bg-warning">
            <div class="card-body d-flex align-items-center">
                <i class="bi bi-tag fs-1 me-3"></i>
                <div>
                    <h5 class="card-title mb-1">Mevcut Kampanyalar</h5>
                    <p class="card-text fs-4 mb-0">@ViewBag.CurrentCampaigns</p>
                </div>
            </div>
        </div>
    </div>

</div>

<hr class="my-4" />

<div class="row g-4">
    <!-- Yaklaşan Randevular -->
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-light">
                <i class="bi bi-clock me-2"></i> Yaklaşan Randevular
            </div>
            <ul class="list-group list-group-flush">
                @foreach (var appointment in ViewBag.UpcomingAppointments)
                {
                    <li class="list-group-item">
                        @appointment.Tarih.ToString("dd.MM.yyyy HH:mm") - @appointment.Hizmet.Ad
                    </li>
                }
            </ul>
        </div>
    </div>

    <!-- Favori Salonlar / Hizmetler -->
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-light">
                <i class="bi bi-heart me-2"></i> Favori Salonlar
            </div>
            <ul class="list-group list-group-flush">
                @foreach (var salon in ViewBag.FavoriteSalons)
                {
                    <li class="list-group-item">@salon.Ad</li>
                }
            </ul>
        </div>
    </div>
</div>
