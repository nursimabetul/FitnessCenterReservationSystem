@model FitnessCenterReservationSystem.ViewModels.AntrenorUzmanlikViewModel

<h4 class="mb-3">
    <i class="bi bi-person-badge text-primary me-1"></i>
    @Model.AdSoyad
    <small class="text-muted">(@Model.Email)</small>
</h4>

<div class="card shadow-sm border-0">
    <div class="card-body p-3">

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="AntrenorId" />

            @foreach (var u in Model.TumUzmanliklar)
            {
                <div class="form-check mb-1">
                    <input class="form-check-input"
                           type="checkbox"
                           name="SecilenUzmanlikler"
                           value="@u.Id"
                           @(u.Secili ? "checked" : "") />
                    <label class="form-check-label">@u.Ad</label>
                </div>
            }

            <div class="d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-primary btn-sm px-3">
                    <i class="bi bi-check2 me-1"></i> Kaydet
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-3">
                    <i class="bi bi-arrow-left me-1"></i> İptal
                </a>
            </div>
        </form>

    </div>
</div>
