@{
    ViewData["Title"] = "Antrenör Uzmanlık Atama";
    var antrenorler = ViewBag.Antrenorler as List<FitnessCenterReservationSystem.Models.ApplicationUser>;
    var uzmanlikAlanlari = ViewBag.UzmanlikAlanlari as List<FitnessCenterReservationSystem.Models.UzmanlikAlani>;
}

<h3>@ViewData["Title"]</h3>

<form asp-action="Create" method="post">

    <div class="mb-3">
        <label class="form-label">Antrenör Seç</label>
        <select name="antrenorId" class="form-select">
            <option value="">-- Antrenör Seç --</option>
            @foreach (var a in antrenorler)
            {
                <option value="@a.Id">@a.Ad @a.Soyad</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Uzmanlık Alanları</label>
        @foreach (var uzmanlik in uzmanlikAlanlari)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="secilenUzmanlikler" value="@uzmanlik.Id" />
                <label class="form-check-label">@uzmanlik.Ad</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
