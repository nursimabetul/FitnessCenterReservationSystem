@model IEnumerable<FitnessCenterReservationSystem.Models.ApplicationUser>

<h4 class="mb-3">
    <i class="bi bi-gear text-primary me-1"></i>
    Antrenör Hizmet Tanımları
</h4>

<div class="card shadow-sm border-0">
    <div class="card-body p-2">

        <table class="table table-hover table-sm align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Ad Soyad</th>
                    <th>Verdiği Hizmetler</th>
                    <th class="text-end" style="width: 120px;">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var antrenor in Model)
                {
                    <tr>
                        <td>@($"{antrenor.Ad} {antrenor.Soyad}")</td>
                        <td>
                            @if (antrenor.AntrenorHizmetler.Any())
                            {
                                <ul class="mb-0 ps-3">
                                    @foreach (var h in antrenor.AntrenorHizmetler)
                                    {
                                        <li>@h.Hizmet.Ad</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <em>Tanımlı hizmet yok</em>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@antrenor.Id"
                               class="btn btn-outline-primary btn-sm px-2 py-1">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
