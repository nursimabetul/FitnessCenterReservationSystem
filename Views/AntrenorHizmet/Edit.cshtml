@model FitnessCenterReservationSystem.ViewModels.AntrenorHizmetViewModel

<h4 class="mb-3">
    <i class="bi bi-person-badge text-primary me-1"></i>
    @Model.AdSoyad
    <small class="text-muted">(@Model.Email)</small>
</h4>

<div class="card shadow-sm border-0">
    <div class="card-body p-3">

        <form asp-action="Edit" method="post">
            <input type="hidden" name="antrenorId" value="@Model.AntrenorId" />

            <table class="table table-hover table-sm align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width:40px;"></th>
                        <th>Hizmet</th>
                        <th>Süre</th>
                        <th>Ücret</th>
                        <th>Salon</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var h in Model.TumHizmetler)
                    {
                        <tr>
                            <td>
                                <input class="form-check-input"
                                       type="checkbox"
                                       name="secilenHizmetler"
                                       value="@h.Id"
                                       @(h.Secili ? "checked" : "") />
                            </td>
                            <td>@h.Ad</td>
                            <td>@h.SureDakika dk</td>
                            <td>@h.Ucret ₺</td>
                            <td>@h.SalonAdi</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-primary btn-sm px-3">
                    <i class="bi bi-check2 me-1"></i> Kaydet
                </button>

                <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-3">
                    <i class="bi bi-arrow-left me-1"></i> İptal
                </a>
            </div>

        </form>

    </div>
</div>
