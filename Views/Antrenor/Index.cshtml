@{
    ViewData["Title"] = "Antrenör Dashboard";
}

<h1 class="mb-4">Hoşgeldiniz, @User.Identity.Name!</h1>

<div class="row g-4">

    <!-- Aktif Randevular Kartı -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0 text-white bg-primary h-100">
            <div class="card-body d-flex align-items-center">
                <div class="me-3">
                    <i class="bi bi-calendar-check-fill display-4"></i>
                </div>
                <div>
                    <h5 class="card-title">Aktif Randevular</h5>
                    <h3>@ViewBag.ActiveAppointmentsCount</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Toplam Hizmetler Kartı -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0 text-white bg-success h-100">
            <div class="card-body d-flex align-items-center">
                <div class="me-3">
                    <i class="bi bi-gear-fill display-4"></i>
                </div>
                <div>
                    <h5 class="card-title">Toplam Hizmetler</h5>
                    <h3>@ViewBag.TotalServices</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Uzmanlık Alanları Kartı -->
    <div class="col-md-4">
        <div class="card shadow-sm border-0 text-white bg-warning h-100">
            <div class="card-body d-flex align-items-center">
                <div class="me-3">
                    <i class="bi bi-person-badge-fill display-4"></i>
                </div>
                <div>
                    <h5 class="card-title">Uzmanlık Alanları</h5>
                    <h3>@ViewBag.TotalSpecializations</h3>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Yaklaşan Randevular -->
<div class="mt-5">
    <h4>Yaklaşan Randevular</h4>
    <hr />
    @if (ViewBag.UpcomingAppointments != null && ViewBag.UpcomingAppointments.Count > 0)
    {
        <table class="table table-striped table-bordered shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>Üye</th>
                    <th>Hizmet</th>
                    <th>Tarih</th>
                    <th>Saat</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in ViewBag.UpcomingAppointments)
                {
                    <tr>
                        <td>@r.Uye?.AdSoyad</td>
                        <td>@r.Hizmet?.Ad</td>
                        <td>@r.Tarih.ToString("dd.MM.yyyy")</td>
                        <td>@r.Tarih.ToString("HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">Yaklaşan randevu bulunmamaktadır.</div>
    }
</div>
