@model FitnessCenterReservationSystem.ViewModels.DashboardViewModel

<h1 class="mb-4">Hoşgeldiniz, @User.Identity.Name!</h1>

<div class="row g-4">

    <!-- 1. Satır -->
    <div class="col-md-4">
        <div class="card text-white bg-primary h-100">
            <div class="card-body d-flex align-items-center">
                <i class="bi bi-list-check display-4 me-3"></i>
                <div>
                    <h6>Tüm Randevular</h6>
                    <h3>@(Model.Bekleyen + Model.Onaylanan + Model.Tamamlanan + Model.Reddedilen + Model.IptalEdilen)</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-warning h-100">
            <div class="card-body d-flex align-items-center">
                <i class="bi bi-hourglass-split display-4 me-3"></i>
                <div>
                    <h6>Bekleyen</h6>
                    <h3>@Model.Bekleyen</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-success h-100">
            <div class="card-body d-flex align-items-center">
                <i class="bi bi-check-circle display-4 me-3"></i>
                <div>
                    <h6>Onaylı</h6>
                    <h3>@Model.Onaylanan</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- 2. Satır -->
    <div class="col-md-4">
        <div class="card text-white bg-secondary h-100">
            <div class="card-body d-flex align-items-center">
                <i class="bi bi-check-lg display-4 me-3"></i>
                <div>
                    <h6>Tamamlanan</h6>
                    <h3>@Model.Tamamlanan</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-info h-100">
            <div class="card-body d-flex align-items-center">
                <i class="bi bi-x-circle display-4 me-3"></i>
                <div>
                    <h6>Reddedilen</h6>
                    <h3>@Model.Reddedilen</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-danger h-100">
            <div class="card-body d-flex align-items-center">
                <i class="bi bi-x-circle-fill display-4 me-3"></i>
                <div>
                    <h6>İptal Edilenler</h6>
                    <h3>@Model.IptalEdilen</h3>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Bugünkü Randevular -->
<div class="mt-5">
    <h4>Bugünkü Randevular</h4>
    <hr />
    @await Html.PartialAsync("_RandevuTabloPartial", Model.BugunRandevular)
</div>

<!-- Yaklaşan Randevular -->
<div class="mt-5">
    <h4>Yaklaşan Randevular</h4>
    <hr />
    @await Html.PartialAsync("_RandevuTabloPartial", Model.YaklasanRandevular)
</div>
