@model List<FitnessCenterReservationSystem.ViewModels.UzmanlikCheckboxVM>

<h4>Uzmanlık Alanlarım</h4>

<form asp-action="UzmanlikAlanlarim" method="post">
	@Html.AntiForgeryToken()

	<div class="list-group mb-3">
		@for (int i = 0; i < Model.Count; i++)
		{
			<div class="list-group-item">
				<input type="checkbox"
					   name="secilenUzmanliklar"
					   value="@Model[i].Id"
					   @(Model[i].Secili ? "checked" : "") />
				<label class="ms-2">@Model[i].Ad</label>
			</div>
		}
	</div>

	<button type="submit" class="btn btn-primary">
		Kaydet
	</button>
</form>
