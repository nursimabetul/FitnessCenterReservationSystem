@model List<FitnessCenterReservationSystem.Models.AntrenorCalismaSaati>

<h4>Çalışma Saatlerim</h4>

<form asp-action="CalismaSaatlerim" method="post">
	@Html.AntiForgeryToken()

	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Gün</th>
				<th>Başlangıç</th>
				<th>Bitiş</th>
			</tr>
		</thead>
		<tbody>
			@for (int i = 0; i < Model.Count; i++)
			{
				<tr>
					<td>
						<select asp-for="@Model[i].Gun" class="form-select"
								asp-items="Html.GetEnumSelectList<DayOfWeek>()">
						</select>
					</td>
					<td>
						<input asp-for="@Model[i].BaslangicSaati" type="time" class="form-control" />
					</td>
					<td>
						<input asp-for="@Model[i].BitisSaati" type="time" class="form-control" />
					</td>
				</tr>
			}
		</tbody>
	</table>

	<button type="submit" class="btn btn-primary">
		Kaydet
	</button>
</form>
