@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Onay Bekleyen Kullanıcılar";
}

<h4 class="mb-3">
    <i class="bi bi-person-check text-primary me-1"></i>
    @ViewData["Title"]
</h4>

@if (!Model.Any())
{
    <div class="alert alert-info">Onay bekleyen kullanıcı yok.</div>
}
else
{
    <div class="card shadow-sm border-0">
        <div class="card-body p-2">
            <table class="table table-hover table-sm align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>Rol</th>
                        <th>Email Onayı</th>
                        <th class="text-end" style="width: 180px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.User.Ad @item.User.Soyad</td>
                            <td>@item.User.Email</td>
                            <td>
                                @switch (item.Role)
                                {
                                    case "Admin":
                                        <span class="badge bg-danger">@item.Role</span>
                                        break;
                                    case "Antrenör":
                                        <span class="badge bg-primary">@item.Role</span>
                                        break;
                                    case "Üye":
                                        <span class="badge bg-success">@item.Role</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@item.Role</span>
                                        break;
                                }
                            </td>
                            <td>
                                @if (item.User.EmailConfirmed)
                                {
                                    <span class="badge bg-success">Onaylandı</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Beklemede</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <form asp-action="KullaniciOnayla" method="post" style="display:inline">
                                        <input type="hidden" name="id" value="@item.User.Id" />
                                        <button type="submit" class="btn btn-success btn-sm px-2 py-1">
                                            <i class="bi bi-check me-1"></i> Onayla
                                        </button>
                                    </form>
                                    <form asp-action="KullaniciReddet" method="post" style="display:inline">
                                        <input type="hidden" name="id" value="@item.User.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm px-2 py-1">
                                            <i class="bi bi-x me-1"></i> Reddet
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mt-2">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-2">@TempData["Error"]</div>
}
