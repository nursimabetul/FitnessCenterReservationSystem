@using Microsoft.AspNetCore.Identity
@using FitnessCenterReservationSystem.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<nav class="app-header navbar navbar-expand bg-body">
    <div class="container-fluid">

        <!-- Sidebar Toggle -->
        <button class="btn btn-link nav-link" data-lte-toggle="sidebar" type="button">
            <i class="bi bi-list fs-5"></i>
        </button>

        <!-- Left -->
        <ul class="navbar-nav ms-2">
            <li class="nav-item d-none d-md-block">
                <a href="/" class="nav-link">Anasayfa</a>
            </li>
        </ul>

        <!-- Right -->
        <ul class="navbar-nav ms-auto">

            <!-- Search -->
            <li class="nav-item dropdown">
                <a class="nav-link" data-bs-toggle="dropdown">
                    <i class="bi bi-search"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-end p-3">
                    <form class="d-flex">
                        <input class="form-control me-2" placeholder="Ara..." />
                        <button class="btn btn-primary" type="submit">Ara</button>
                    </form>
                </div>
            </li>

            <!-- Notifications (sadece giriş yapanlar) -->
            @if (SignInManager.IsSignedIn(User))
            {
                <li class="nav-item dropdown">
                    <a class="nav-link" data-bs-toggle="dropdown">
                        <i class="bi bi-bell"></i>
                        <span class="badge bg-danger">3</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-end p-0">
                        <div class="card card-body">
                            <h6 class="dropdown-header">Bildirimler</h6>
                            <a class="dropdown-item">Yeni randevu</a>
                            <a class="dropdown-item">Yeni üye</a>
                        </div>
                    </div>
                </li>
            }

            <!-- GİRİŞ YAPMAMIŞ -->
            @if (!SignInManager.IsSignedIn(User))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Account" asp-action="Login">
                        Giriş Yap
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Account" asp-action="Register">
                        Kayıt Ol
                    </a>
                </li>
            }
            else
            {
                var user = await UserManager.GetUserAsync(User);

                var roles = user != null
                ? await UserManager.GetRolesAsync(user)
                : new List<string>();

                var roleName = roles.FirstOrDefault();

                <li class="nav-item dropdown user-menu">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                        <img src="https://ui-avatars.com/api/?name=@(
                             user != null
                                 ? Uri.EscapeDataString($"{user.Ad} {user.Soyad}")
                                 : "User"
                                                )"
                         class="rounded-circle me-1"
                         width="32" />

                        <span class="d-none d-md-inline">
                            @(user != null ? $"{user.Ad} {user.Soyad}" : "Kullanıcı")
                        </span>

                    @if (!string.IsNullOrEmpty(roleName))
                        {
                            <small class="text-muted">(@roleName)</small>
                        }
                    </a>

                    <ul class="dropdown-menu dropdown-menu-end">
                        <li class="dropdown-header text-center">
                            <strong>@(roleName ?? "Kullanıcı")</strong><br />
                            <small>Fitness Center</small>
                        </li>

                        <li>
                            <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                <i class="bi bi-person me-2"></i> Profilim
                            </a>
                        </li>

                        <li>
                            <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                                <i class="bi bi-key me-2"></i> Şifre Değiştir
                            </a>
                        </li>

                        <li><hr class="dropdown-divider" /></li>

                        <li>
                            <form asp-controller="Account"
                                  asp-action="Logout"
                                  method="post"
                                  class="m-0">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="dropdown-item text-danger">
                                    <i class="bi bi-box-arrow-right me-2"></i> Çıkış Yap
                                </button>
                            </form>
                        </li>
                    </ul>
                </li>
            }

        </ul>
    </div>
</nav>
