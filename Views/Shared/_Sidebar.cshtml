@using Microsoft.AspNetCore.Identity
@using FitnessCenterReservationSystem.Models
@inject UserManager<ApplicationUser> UserManager

<aside class="app-sidebar bg-body-secondary shadow" data-bs-theme="light">

    <!-- Logo -->
    <div class="sidebar-brand p-3 text-center">
        <a href="/" class="text-decoration-none fw-bold fs-5">
            <i class="bi bi-activity"></i> Fitness Center
        </a>
    </div>

    <div class="sidebar-wrapper">

        @if (User.IsInRole("Admin"))
        {
            @await Html.PartialAsync("_SidebarAdmin")
        }
        else if (User.IsInRole("Antrenör"))
        {
            @await Html.PartialAsync("_SidebarAntrenor")
        }
        else if (User.IsInRole("Üye"))
        {
            @await Html.PartialAsync("_SidebarUye")
        }

    </div>
</aside>
