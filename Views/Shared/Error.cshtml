@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4 text-center" style="max-width: 600px; border-radius: 15px;">
        <div class="card-body">
            <div class="mb-3">
                <i class="bi bi-exclamation-triangle-fill text-warning fs-1"></i>
            </div>

            <h1 class="card-title text-danger mb-3">Oops! Bir hata oluştu.</h1>
            <p class="card-text mb-3 text-muted">
                Üzgünüz, isteğiniz işlenirken bir sorun meydana geldi.
            </p>

            @if (Model.ShowRequestId)
            {
                <p class="small text-secondary">
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </p>
            }

            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2">
                    <i class="bi bi-house-door me-1"></i> Anasayfa
                </a>
                <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-secondary">
                    <i class="bi bi-envelope me-1"></i> Destek
                </a>
            </div>

            <hr class="my-4" />

            <p class="small text-muted">
                Eğer geliştirme ortamındaysanız, <strong>Development</strong> modunu açarak detaylı hata bilgilerini görebilirsiniz.
            </p>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
