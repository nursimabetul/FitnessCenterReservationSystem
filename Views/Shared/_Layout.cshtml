<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitnessCenterReservationSystem</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Proje CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitnessCenterReservationSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FitnessCenterReservationSystem</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <!-- Ana sayfa -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>

                        <!-- Hizmetler -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Hizmet" asp-action="Index">Hizmetler</a>
                        </li>

                        <!-- Salonlar -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Salon" asp-action="Index">Salonlar</a>
                        </li>

                        <!-- Antrenörler -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Antrenor" asp-action="Index">Antrenörler</a>
                        </li>

                        <!-- Randevular -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Randevu" asp-action="Index">Randevular</a>
                        </li>

                        <!-- Yönetim (Sadece Admin) -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" data-bs-toggle="dropdown" href="#">Yönetim</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Salon" asp-action="Index">Salon Yönetimi</a></li>
                                    <li><a class="dropdown-item" asp-controller="Hizmet" asp-action="Index">Hizmet Yönetimi</a></li>
                                    <li><a class="dropdown-item" asp-controller="Antrenor" asp-action="Index">Antrenör Yönetimi</a></li>
                                    <li><a class="dropdown-item" asp-controller="UzmanlikKategori" asp-action="Index">Uzmanlık Kategorileri</a></li>
                                </ul>
                            </li>
                        }

                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FitnessCenterReservationSystem -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
