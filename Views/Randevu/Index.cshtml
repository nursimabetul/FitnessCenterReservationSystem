@model IEnumerable<FitnessCenterReservationSystem.Models.Randevu>
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Randevular";
    var isAntrenor = User.IsInRole("Antrenör");
}

<h1 class="mb-4">Randevular</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (!isAntrenor)
{
    <a class="btn btn-primary mb-3" asp-action="Create">Yeni Randevu Oluştur</a>
}
else
{
    <form method="get" class="mb-3">
        <label>Tarihe Göre Filtrele:</label>
        <input type="date" name="tarihFilter" class="form-control d-inline-block w-auto"
               value="@(Context.Request.Query["tarihFilter"].ToString())" />
        <button type="submit" class="btn btn-secondary">Filtrele</button>
    </form>
}

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Üye</th>
            <th>Antrenör</th>
            <th>Hizmet</th>
            <th>Salon</th>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Uye.UserName</td>
                <td>@r.Antrenor.UserName</td>
                <td>@r.Hizmet.Ad</td>
                <td>@r.Salon.Ad</td>
                <td>@r.Tarih.ToString("dd.MM.yyyy")</td>
                <td>@r.BaslangicSaati.ToString(@"hh\:mm") - @r.BitisSaati.ToString(@"hh\:mm")</td>
                <td>@((RandevuDurum)r.Durum)</td>
                <td>
                    @if (!isAntrenor)
                    {
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@r.Id">Düzenle</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@r.Id">Sil</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
